#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL,"");

    int valor1,valor2;
    printf("Digite o primeiro número inteiro: ");
    scanf("%d*c",&valor1);
    printf("Digite o segundo número inteiro: ");
    scanf("%d*c",&valor2);

    if( valor1 > valor2) //condição para caso o valor1 for maior que o valor2.
        printf("%d é maior",valor1);
    if(valor1 < valor2) // condição para caso o valor 2 for maior que o valor1.
        printf("%d é maior",valor2);
    if(valor1 == valor2) //caso as duas variáveis forem iguais.
        printf("Esses números são iguais");

    return 0;
}
